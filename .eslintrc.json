{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        "react/prefer-stateless-function": "off",
        "react/jsx-filename-extension": [
            1, {
                "extensions": [".js", ".jsx"]
            }
        ],
        "jsx-a11y/anchor-is-valid": [
            "error", {
                "components": ["Link"],
                "specialLink": ["to", "path"]
            }
        ],
        "jsx-a11y/label-has-for": ["off"],
        "no-underscore-dangle": ["off"],
        "react/prop-types": ["off"]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": ["react"],
    "globals": {
        "chrome": true
    }
}